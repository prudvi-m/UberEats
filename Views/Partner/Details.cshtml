@model PartnersViewModel
@{
    ViewData["Title"] = "Partner Details";
}

<h2 class="text-center p-2">Partner Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Partner.LogoImage" alt="" />
                <h3>@Model.Partner.BusinessName</h3>
            </li>
            <li class="list-group-item">
                <h4>Conference: @Model.Partner.BusinessAddress</h4>
            </li>
            <li class="list-group-item">
                <h4>Division: @Model.Partner.DriverID</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" asp-controller="Favorites" method="post">
                    <a asp-action="Index" class="btn btn-primary"
                       asp-route-activeConf="@Model.ActiveConf"
                       asp-route-activeDiv="@Model.ActiveDiv">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>
                    <input type="hidden" asp-for="Partner.PartnerID" />
                </form>
            </li>
        </ul>
    </div>
</div>